generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//uuid = Universal Unique ID/ Gera automaticamente um id Ãºnico universal

model User {
  id        String   @id @default(uuid())
  githubId  Int      @unique
  name      String
  login     String
  avatarUrl String
  Memory    Memory[]
}

model Memory {
  id       String   @id @default(uuid())
  
  coverUrl String
  content  String
  isPublic Boolean  @default(false)
  createAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
